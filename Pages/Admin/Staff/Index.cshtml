@page
@model CourseFlow.Pages.Admin.Staff.IndexModel
@{
    ViewData["Title"] = "Staff Management";
}

<style>
    .staff-avatar {
        width: 40px;
        height: 40px;
        border-radius: 50%;
        object-fit: cover;
    }

    .inactive-row {
        opacity: 0.5;
        filter: grayscale(100%);
    }

    .table-hover tbody tr:hover {
        background-color: #f8f9fa;
    }
</style>

<div class="d-flex justify-content-between align-items-center mb-3">
    <h2>Staff Management</h2>
    <button class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#addModal">
        + Add Staff
    </button>
</div>

<!-- SEARCH -->
<form method="get" class="row g-2 mb-3">
    <div class="col-md-4">
        <input class="form-control"
               name="search"
               value="@Model.Search"
               placeholder="Search name / email / phone" />
    </div>
    <div class="col-md-3">
        <select class="form-select" name="status">
            <option value="">All</option>
            <option value="active" selected="@(Model.Status=="active")">Active</option>
            <option value="inactive" selected="@(Model.Status=="inactive")">Inactive</option>
        </select>
    </div>
    <div class="col-md-2">
        <button class="btn btn-primary w-100">Search</button>
    </div>
</form>

<table class="table table-bordered table-hover align-middle">
    <thead class="table-light">
        <tr>
            <th>ID</th>
            <th>Staff</th>
            <th>Contact</th>
            <th>Email</th>
            <th style="width:260px;">Actions</th>
        </tr>
    </thead>
    <tbody>
    @foreach (var s in Model.Staff)
    {
        <tr class="@(s.IsActive ? "" : "inactive-row")">

            <td>@s.Id</td>

            <td>
                <div class="d-flex align-items-center gap-2">
                    <img src="@s.ProfileImagePath"
                         class="staff-avatar" />
                    <div>
                        <div class="fw-semibold">@s.FullName</div>
                        <small class="text-muted">@s.staff_code</small>
                    </div>
                </div>
            </td>

            <td>@s.PhoneNumber</td>

            <td>@s.Email</td>

            <td>
                <button class="btn btn-sm btn-outline-info"
                        data-staff='@Html.Raw(System.Text.Json.JsonSerializer.Serialize(s))'
                        onclick="viewStaff(this)">
                    View
                </button>

                <button class="btn btn-sm btn-outline-warning"
                        data-staff='@Html.Raw(System.Text.Json.JsonSerializer.Serialize(s))'
                        onclick="editStaff(this)">
                    Edit
                </button>

                <button class="btn btn-sm btn-outline-danger"
                        onclick="confirmDelete(@s.Id, '@s.FullName')">
                    Deactivate
                </button>
            </td>
        </tr>
    }
    </tbody>
</table>

<!-- PAGINATION -->
<nav>
    <ul class="pagination justify-content-center">
        @for (int i = 1; i <= Model.TotalPages; i++)
        {
            <li class="page-item @(i==Model.CurrentPage?"active":"")">
                <a class="page-link"
                   href="?pageIndex=@i&search=@Model.Search&status=@Model.Status">
                    @i
                </a>
            </li>
        }
    </ul>
</nav>

<!-- VIEW MODAL -->
<div class="modal fade" id="viewModal" tabindex="-1">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content shadow-sm rounded-4">
            <div class="modal-header bg-light">
                <h5 class="modal-title fw-semibold">Staff Profile</h5>
                <button class="btn-close" data-bs-dismiss="modal"></button>
            </div>

            <div class="modal-body px-4">
                <div class="text-center mb-3">
                    <img id="vAvatar"
                         src="/uploads/staff/default.png"
                         class="rounded-circle"
                         style="width:80px;height:80px;object-fit:cover;">
                </div>

                <div class="text-center mb-4">
                    <h5 id="vName" class="mb-0"></h5>
                    <small id="vEmail" class="text-muted"></small>
                </div>

                <hr>

                <div class="row g-3">
                    <div class="col-6">
                        <label class="form-label text-muted">Phone</label>
                        <div id="vPhone" class="fw-semibold"></div>
                    </div>

                    <div class="col-6">
                        <label class="form-label text-muted">Role</label>
                        <div id="vRole" class="fw-semibold"></div>
                    </div>

                    <div class="col-12">
                        <label class="form-label text-muted">Department</label>
                        <div id="vDepartment" class="fw-semibold"></div>
                    </div>
                </div>
            </div>

            <div class="modal-footer">
                <button class="btn btn-secondary" data-bs-dismiss="modal">
                    Close
                </button>
            </div>
        </div>
    </div>
</div>

<!-- EDIT STAFF MODAL -->
<div class="modal fade" id="editModal" tabindex="-1">
    <div class="modal-dialog modal-lg modal-dialog-centered">
        <div class="modal-content shadow-sm rounded-4">

            <form method="post"
                  asp-page-handler="Edit"
                  enctype="multipart/form-data">

                <div class="modal-header bg-light">
                    <h5 class="modal-title fw-semibold">Edit Staff</h5>
                    <button class="btn-close" data-bs-dismiss="modal"></button>
                </div>

                <div class="modal-body px-4">
                    <input type="hidden" name="id" id="eId" />

                    <!-- PROFILE IMAGE -->
                    <div class="text-center mb-4">
                        <img id="eAvatarPreview"
                             src="/uploads/staff/default.png"
                             class="rounded-circle mb-2"
                             style="width:90px;height:90px;object-fit:cover;" />

                        <input type="file"
                               class="form-control"
                               name="profileImage"
                               accept="image/*"
                               onchange="previewEditImage(this)" />
                    </div>

                    <div class="row g-3">

                        <div class="col-md-6">
                            <label class="form-label">Staff Code</label>
                            <input class="form-control"
                                   name="staff_code"
                                   id="estaff_code"
                                   required />
                        </div>

                        <div class="col-md-6">
                            <label class="form-label">Full Name</label>
                            <input class="form-control"
                                   name="FullName"
                                   id="eName"
                                   required />
                        </div>

                        <div class="col-md-6">
                            <label class="form-label">Email</label>
                            <input class="form-control"
                                   name="email"
                                   id="eEmail"
                                   required />
                        </div>

                        <div class="col-md-6">
                            <label class="form-label">Phone</label>
                            <input class="form-control"
                                   name="phoneNumber"
                                   id="ePhone" />
                        </div>

                        <div class="col-md-6">
                            <label class="form-label">Role</label>
                            <input class="form-control"
                                   name="role"
                                   id="eRole"
                                   required />
                        </div>

                        <div class="col-md-6">
                            <label class="form-label">Department</label>
                            <input class="form-control"
                                   name="department"
                                   id="eDepartment" />
                        </div>

                        <div class="col-md-4">
                            <label class="form-label">Status</label>
                            <select class="form-select"
                                    name="isActive"
                                    id="eStatus">
                                <option value="true">Active</option>
                                <option value="false">Inactive</option>
                            </select>
                        </div>

                    </div>
                </div>

                <div class="modal-footer">
                    <button class="btn btn-secondary" type="button" data-bs-dismiss="modal">
                        Cancel
                    </button>
                    <button class="btn btn-primary" type="submit" id="saveEditBtn">
                        Save Changes
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>

<!-- DELETE STAFF MODAL -->
<div class="modal fade" id="deleteModal" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content">
            <form method="post" asp-page-handler="Delete">

                <div class="modal-header">
                    <h5 class="modal-title">Deactivate Staff</h5>
                    <button class="btn-close" data-bs-dismiss="modal"></button>
                </div>

                <div class="modal-body">
                    <input type="hidden" name="id" id="dId" />
                    Are you sure you want to deactivate
                    <strong id="dName"></strong>?
                </div>

                <div class="modal-footer">
                    <button class="btn btn-danger">Deactivate</button>
                </div>

            </form>
        </div>
    </div>
</div>

<!-- ADD STAFF MODAL -->
<div class="modal fade" id="addModal" tabindex="-1">
    <div class="modal-dialog modal-lg modal-dialog-centered">
        <div class="modal-content shadow-sm rounded-4">

            <form method="post"
                  asp-page-handler="Add"
                  enctype="multipart/form-data">

                <div class="modal-header bg-light">
                    <h5 class="modal-title fw-semibold">Add New Staff</h5>
                    <button class="btn-close" data-bs-dismiss="modal"></button>
                </div>

                <div class="modal-body px-4">

                    <div class="text-center mb-4">
                        <img id="aAvatarPreview"
                             src="/uploads/staff/default.png"
                             class="rounded-circle mb-2"
                             style="width:90px;height:90px;object-fit:cover;" />

                        <input type="file"
                               class="form-control"
                               name="profileImage"
                               accept="image/*"
                               onchange="previewAddImage(this)" />
                    </div>

                    <div class="row g-3">

                        <div class="col-md-6">
                            <label class="form-label">Staff Code</label>
                            <input class="form-control"
                                   name="staff_code"
                                   id="StaffCode"
                                   required />
                        </div>

                        <div class="col-md-6">
                            <label class="form-label">Full Name</label>
                            <input class="form-control"
                                   name="FullName"
                                   id="FullName"
                                   required />
                        </div>

                        <div class="col-md-6">
                            <label class="form-label">Email</label>
                            <input class="form-control"
                                   name="email"
                                   id="email"
                                   type="email"
                                   required />
                        </div>

                        <div class="col-md-6">
                            <label class="form-label">Phone</label>
                            <input class="form-control"
                                   name="phoneNumber"
                                   id="phoneNumber" />
                        </div>

                        <div class="col-md-6">
                            <label class="form-label">Role</label>
                            <input class="form-control"
                                   name="role"
                                   id="role"
                                   required />
                        </div>

                        <div class="col-md-6">
                            <label class="form-label">Department</label>
                            <input class="form-control"
                                   name="department"
                                   id="department" />
                        </div>

                        <div class="col-md-4">
                            <label class="form-label">Status</label>
                            <select class="form-select"
                                    name="isActive">
                                <option value="true" selected>Active</option>
                                <option value="false">Inactive</option>
                            </select>
                        </div>

                        <div class="col-md-8">
                            <label class="form-label">Password</label>
                            <input type="password"
                                   name="password"
                                   class="form-control"
                                   minlength="6"
                                   required />
                        </div>

                    </div>
                </div>

                <div class="modal-footer">
                    <button class="btn btn-secondary" type="button" data-bs-dismiss="modal">
                        Cancel
                    </button>
                    <button class="btn btn-success" type="submit">
                        Add Staff
                    </button>
                </div>

            </form>
        </div>
    </div>
</div>

<!-- Message Toast -->
<div class="toast-container position-fixed top-0 end-0 p-3">

    <!-- ADD SUCCESS -->
    <div id="addSuccessToast"
         class="toast align-items-center text-bg-success border-0"
         role="alert" aria-live="assertive" aria-atomic="true">
        <div class="d-flex">
            <div class="toast-body">Added successfully</div>
            <button class="btn-close btn-close-white me-2 m-auto"
                    data-bs-dismiss="toast"></button>
        </div>
    </div>

    <!-- ADD ERROR -->
    <div id="addErrorToast"
         class="toast align-items-center text-bg-danger border-0"
         role="alert" aria-live="assertive" aria-atomic="true">
        <div class="d-flex">
            <div class="toast-body">Add failed. Please try again.</div>
            <button class="btn-close btn-close-white me-2 m-auto"
                    data-bs-dismiss="toast"></button>
        </div>
    </div>

    <!-- UPDATE SUCCESS -->
    <div id="updateSuccessToast"
         class="toast align-items-center text-bg-success border-0"
         role="alert" aria-live="assertive" aria-atomic="true">
        <div class="d-flex">
            <div class="toast-body">Update successfully</div>
            <button class="btn-close btn-close-white me-2 m-auto"
                    data-bs-dismiss="toast"></button>
        </div>
    </div>

    <!-- UPDATE ERROR -->
    <div id="updateErrorToast"
         class="toast align-items-center text-bg-danger border-0"
         role="alert" aria-live="assertive" aria-atomic="true">
        <div class="d-flex">
            <div class="toast-body">Update failed. Please try again.</div>
            <button class="btn-close btn-close-white me-2 m-auto"
                    data-bs-dismiss="toast"></button>
        </div>
    </div>

</div>




<script>
window.editSaved = false;

document.addEventListener("DOMContentLoaded", function () {

    // -------------------------
    // Helpers
    // -------------------------
    const byId = id => document.getElementById(id);

    function on(id, event, handler) {
        const el = byId(id);
        if (!el) return;
        el.addEventListener(event, handler);
    }

    // -------------------------
    // Save button → mark edit
    // -------------------------
    on("saveEditBtn", "click", function () {
        window.editSaved = true;
    });

    // -------------------------
    // Uppercase fields
    // -------------------------
    [
        "eName", "estaff_code", "FullName", "StaffCode",
        "role", "department", "eRole", "eDepartment"
    ].forEach(id => {
        on(id, "input", function () {
            this.value = String(this.value || "").toUpperCase();
        });
    });

    // -------------------------
    // Lowercase email
    // -------------------------
    ["email", "eEmail"].forEach(id => {
        on(id, "input", function () {
            this.value = String(this.value || "").toLowerCase();
        });
    });

    // -------------------------
    // Phone: digits only, 10–11
    // -------------------------
    ["phoneNumber", "ePhone"].forEach(id => {

        on(id, "input", function () {
            this.value = String(this.value || "")
                .replace(/\D/g, "")
                .slice(0, 11);
        });

        on(id, "blur", function () {
            if (!this.value) {
                this.setCustomValidity("");
            } else if (this.value.length < 10 || this.value.length > 11) {
                this.setCustomValidity("Phone number must be 10–11 digits");
            } else {
                this.setCustomValidity("");
            }
        });

    });

    const toastMap = [
        {
            show: @(TempData["AddSuccess"] != null ? "true" : "false"),
            id: "addSuccessToast",
            delay: 3000
        },
        {
            show: @(TempData["AddError"] != null ? "true" : "false"),
            id: "addErrorToast",
            delay: 5000
        },
        {
            show: @(TempData["UpdateSuccess"] != null ? "true" : "false"),
            id: "updateSuccessToast",
            delay: 3000
        },
        {
            show: @(TempData["UpdateError"] != null ? "true" : "false"),
            id: "updateErrorToast",
            delay: 5000
        }
    ];

    toastMap.forEach(t => {
        if (t.show) {
            const el = document.getElementById(t.id);
            if (el) {
                new bootstrap.Toast(el, { delay: t.delay }).show();
            }
        }
    });

});


function viewStaff(btn) {
    const s = JSON.parse(btn.getAttribute('data-staff'));

    document.getElementById('vName').innerText = s.FullName;
    document.getElementById('vEmail').innerText = s.Email;
    document.getElementById('vPhone').innerText = s.PhoneNumber || '-';
    document.getElementById('vRole').innerText = s.Role;
    document.getElementById('vDepartment').innerText = s.Department || '-';

    document.getElementById('vAvatar').src =
        s.ProfileImagePath && s.ProfileImagePath.trim() !== ""
            ? s.ProfileImagePath
            : "/uploads/staff/default.png";

    new bootstrap.Modal(document.getElementById('viewModal')).show();
}

function editStaff(btn) {
    const s = JSON.parse(btn.getAttribute('data-staff'));

    document.getElementById('eId').value = s.Id;
    document.getElementById('estaff_code').value = s.staff_code;
    document.getElementById('eName').value = s.FullName;
    document.getElementById('eEmail').value = s.Email;
    document.getElementById('ePhone').value = s.PhoneNumber || '';
    document.getElementById('eRole').value = s.Role;
    document.getElementById('eDepartment').value = s.Department || '';
    document.getElementById('eStatus').value = s.IsActive.toString();

    document.getElementById('eAvatarPreview').src =
        s.ProfileImagePath && s.ProfileImagePath.trim() !== ""
            ? s.ProfileImagePath
            : "/uploads/staff/default.png";

    new bootstrap.Modal(document.getElementById('editModal')).show();
}

function confirmDelete(id, name) {
    document.getElementById('dId').value = id;
    document.getElementById('dName').innerText = name;
    new bootstrap.Modal(document.getElementById('deleteModal')).show();
}

function previewAddImage(input) {
    if (input.files && input.files[0]) {
        const reader = new FileReader();
        reader.onload = e => {
            document.getElementById('aAvatarPreview').src = e.target.result;
        };
        reader.readAsDataURL(input.files[0]);
    }
}

setTimeout(() => {
    const alert = document.querySelector('.alert');
    if (alert) {
        bootstrap.Alert.getOrCreateInstance(alert).close();
    }
}, 3000);
</script>
