@page
@model CourseFlow.Pages.Admin.Logbook.IndexModel
@{
    ViewData["Title"] = "Audit Log";
}

<style>
.log-table {
    border-radius: 0.5rem;
    overflow: hidden;
}

.log-table tbody tr.log-row {
    cursor: pointer;
    transition: background 0.15s ease;
}

.log-table tbody tr.log-row:hover {
    background-color: #f8fafc;
}

.log-table tbody tr.log-row td:first-child {
    transition: transform 0.2s ease;
}

.log-table tbody tr.log-row[aria-expanded="true"] td:first-child {
    transform: rotate(90deg);
}

.log-table .badge {
    font-size: 0.75rem;
    font-weight: 500;
    letter-spacing: 0.02em;
}
</style>

<!-- Header -->
<div class="d-flex justify-content-between align-items-center mb-3">
    <h4 class="mb-0">Audit Log</h4>
    <span class="text-muted small">
        Page @Model.CurrentPage of @Model.TotalPages
    </span>
</div>

<!-- Filter -->
<form method="get" class="row g-2 align-items-end mb-3">
    <div class="col-md-3">
        <select name="action" class="form-select">
            <option value="">All</option>
            @foreach (var act in new[] { "LOGIN", "LOGOUT", "CREATE", "UPDATE", "DELETE" })
            {
                <option value="@act" selected="@(Model.ActionFilter == act)">
                    @act
                </option>
            }
        </select>
    </div>

    <div class="col-auto">
        <button class="btn btn-primary">Apply</button>
        <a asp-page="./Index" class="btn btn-outline-secondary">Reset</a>
    </div>
</form>

<!-- Table -->
<table class="table table-hover align-middle log-table shadow-sm">
    <thead class="table-light">
        <tr>
            <th style="width:36px;"></th>
            <th>Date / Time</th>
            <th>User</th>
            <th>Action</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var log in Model.Logs)
        {
            <tr class="log-row"
                data-bs-toggle="collapse"
                data-bs-target="#log-@log.Id"
                aria-expanded="false">

                <td class="text-muted">â–¶</td>

                <td class="text-nowrap">
                    @log.CreatedAt.ToString("yyyy-MM-dd HH:mm")
                </td>

                <td>
                    @log.UserName
                </td>

                <td>
                    <span class="badge bg-secondary">
                        @log.Action
                    </span>
                </td>
            </tr>

            <!-- Details -->
            <tr class="collapse bg-light" id="log-@log.Id">
                <td colspan="4">
                    <div class="p-3 small text-muted">

                        <div><strong>Entity:</strong> @log.Entity</div>

                        @if (!string.IsNullOrEmpty(log.IpAddress))
                        {
                            <div><strong>IP:</strong> @log.IpAddress</div>
                        }

                        @if (!string.IsNullOrEmpty(log.UserAgent))
                        {
                            <div class="text-truncate">
                                <strong>Browser:</strong> @log.UserAgent
                            </div>
                        }

                    </div>
                </td>
            </tr>
        }
    </tbody>
</table>

<!-- Pagination -->
@if (Model.TotalPages > 1)
{
    <nav class="mt-3">
        <ul class="pagination justify-content-center">

            <li class="page-item @(Model.CurrentPage == 1 ? "disabled" : "")">
                <a class="page-link"
                   asp-page="./Index"
                   asp-route-action="@Model.ActionFilter"
                   asp-route-page="@(Model.CurrentPage - 1)">
                    Previous
                </a>
            </li>

            @for (int i = 1; i <= Model.TotalPages; i++)
            {
                <li class="page-item @(i == Model.CurrentPage ? "active" : "")">
                    <a class="page-link"
                       asp-page="./Index"
                       asp-route-action="@Model.ActionFilter"
                       asp-route-page="@i">
                        @i
                    </a>
                </li>
            }

            <li class="page-item @(Model.CurrentPage == Model.TotalPages ? "disabled" : "")">
                <a class="page-link"
                   asp-page="./Index"
                   asp-route-action="@Model.ActionFilter"
                   asp-route-page="@(Model.CurrentPage + 1)">
                    Next
                </a>
            </li>

        </ul>
    </nav>
}
