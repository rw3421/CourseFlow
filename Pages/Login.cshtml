@page
@model CourseFlow.Pages.LoginModel
@{
    ViewData["Title"] = "Login";
}

<style>
    .login-wrapper {
        min-height: 80vh;
        display: flex;
        align-items: center;
        justify-content: center;
    }

    .login-card {
        width: 100%;
        max-width: 380px;
        background: #ffffff;
        padding: 32px;
        border-radius: 12px;
        box-shadow: 0 20px 40px rgba(0, 0, 0, 0.08);
    }

    .login-card h2 {
        text-align: center;
        margin-bottom: 24px;
        font-weight: 600;
        color: #333;
    }

    .form-group {
        margin-bottom: 18px;
    }

    .form-group label {
        display: block;
        margin-bottom: 6px;
        font-size: 14px;
        color: #555;
    }

    .form-control {
        width: 100%;
        padding: 10px 12px;
        border-radius: 8px;
        border: 1px solid #ccc;
        font-size: 14px;
        transition: border-color 0.2s;
    }

    .form-control:focus {
        outline: none;
        border-color: #4f46e5;
    }

    .btn-login {
        width: 100%;
        padding: 12px;
        border-radius: 8px;
        border: none;
        background: #4f46e5;
        color: white;
        font-size: 15px;
        font-weight: 500;
        cursor: pointer;
        transition: background 0.2s;
    }

    .btn-login:hover {
        background: #4338ca;
    }

    .login-message {
        margin-top: 16px;
        text-align: center;
        font-size: 14px;
        color: #dc2626;
    }
</style>

<div class="login-wrapper">
    <div class="login-card">
        <h2>Welcome Back</h2>

        <form method="post">
            <div class="form-group">
                <label asp-for="Email">Email</label>
                <input asp-for="Email" type="email" class="form-control" placeholder="you@example.com" required />
            </div>

            <div class="form-group">
                <label asp-for="Password">Password</label>
                <input asp-for="Password" type="password" class="form-control" placeholder="••••••••" required />
            </div>

            <button type="submit" class="btn-login">
                Sign In
            </button>
        </form>

        @if (!string.IsNullOrEmpty(Model.Message))
        {
            <div class="login-message">
                @Model.Message
            </div>
        }

        @* <div style="margin-top: 18px; text-align: center; font-size: 14px;">
            Don’t have an account?
            <a asp-page="/Register" style="color:#4f46e5; text-decoration:none; font-weight:500;">
                Register
            </a>
        </div> *@
        
    </div>
</div>
